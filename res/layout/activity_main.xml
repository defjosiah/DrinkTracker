<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:ems="10"
         android:gravity="center"
         android:text="0"
         android:textSize="150sp" />

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:layout_marginLeft="27dp"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksBeer"
         android:scaleType="fitCenter"
         android:src="@drawable/change_image" />

     <ImageButton
         android:id="@+id/imageButton2"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:layout_below="@+id/textView1"
         android:layout_marginLeft="20dp"
         android:layout_toRightOf="@+id/imageButton1"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksWine"
         android:scaleType="fitCenter"
         android:src="@drawable/wine" />

     <ImageButton
         android:id="@+id/imageButton3"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:layout_alignLeft="@+id/imageButton2"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="16dp"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksShot"
         android:scaleType="fitCenter"
         android:src="@drawable/shot" />

     <ImageButton
         android:id="@+id/imageButton4"
         android:layout_width="113dp"
         android:layout_height="113dp"
         android:layout_alignBottom="@+id/imageButton3"
         android:layout_toLeftOf="@+id/imageButton2"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksCup"
         android:scaleType="fitCenter"
         android:src="@drawable/cup" />
       
</RelativeLayout>