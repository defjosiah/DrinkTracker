<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="horizontal" >

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:ems="10"
         android:gravity="center"
         android:text="0"
         android:textSize="150sp" />

     <ImageButton
         android:id="@+id/imageButton4"
         android:layout_width="113dp"
         android:layout_height="113dp"
         android:layout_alignRight="@+id/imageButton1"
         android:layout_alignTop="@+id/imageButton3"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksCup"
         android:scaleType="fitCenter"
         android:src="@drawable/change_cup" />

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:layout_marginLeft="25dp"
         android:background="@null"
         android:onClick="updateNumDrinksBeer"
         android:scaleType="fitCenter"
         android:src="@drawable/change_beer" />

     <ImageButton
         android:id="@+id/imageButton2"
         android:layout_width="125dp"
         android:layout_height="125dp"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/imageButton1"
         android:layout_marginRight="35dp"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksWine"
         android:scaleType="fitCenter"
         android:src="@drawable/change_wine" />

     <ImageButton
         android:id="@+id/imageButton3"
         android:layout_width="115dp"
         android:layout_height="115dp"
         android:layout_alignLeft="@+id/imageButton2"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="31dp"
         android:adjustViewBounds="true"
         android:background="@null"
         android:onClick="updateNumDrinksShot"
         android:scaleType="fitCenter"
         android:src="@drawable/change_shot" />

       
</RelativeLayout>